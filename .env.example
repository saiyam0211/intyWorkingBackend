# MongoDB Connection String
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database

# Server Port
PORT=10000

# JWT Secret for authentication
JWT_SECRET=your_jwt_secret_key_here

# Email Configuration for sending emails
EMAIL_USER=example@gmail.com
EMAIL_PASS=your_app_password_here

# Cloudinary Configuration for image uploads
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Razorpay Configuration for payments
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# CORS Configuration - comma-separated list of allowed origins
CORS_ORIGIN=https://inty-frontend.vercel.app,http://localhost:3000,http://localhost:5173

# Admin Configuration - comma-separated list of admin email addresses
ADMIN_EMAILS=admin@example.com,Inty.operations@gmail.com

# Clerk Configuration for authentication
CLERK_SECRET_KEY=your_clerk_secret_key 